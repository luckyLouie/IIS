
{% extends 'DistribuceTiskuBundle::layout.html.twig' %}

{% block title %}Seznam zákázníků{% endblock%}

{% block body %}
    <header>
        <h1>Seznam tiskovin</h1>
    </header>
<table>
    <thead>
        <th>ISSN</th>
        <th>cena</th>
        <th>titul</th>
        <th>den vydání</th>
        <th>nakladatelstvi</th>
        <th>vydavatel</th>
        <th>editovat</th>
    </thead>
    {% for book in books %}
    <tr>
        <td><a href="{{ path('_bookEdit',{'id' : book.ISSN} )}}">{{ book.ISSN }}</a></td>
        <td>{{ book.cena }}</td>
        <td>{{ book.titul }}</td>
        <td>{{ book.den_vydani }}</td>
        <td>{{ book.nakladatelstvi }}</td>
        <td>{{ book.vydavatel }}</td>
        <td><a href="{{ path('_bookEdit',{'id' : book.ISSN} )}}"><img src="{{ asset('images/edit.jpg') }}" alt="editovat zakaznika" width="20" height="20"></a></td>
    </tr>    
    {% endfor %}
</table>
{% endblock %}