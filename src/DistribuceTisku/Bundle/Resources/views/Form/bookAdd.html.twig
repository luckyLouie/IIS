
{% extends 'DistribuceTiskuBundle::layout.html.twig' %}


{% block title %}Přidat titul{% endblock%}

{% block body %}
    <header>
        <h1>Přidat titul</h1>
    </header>

    {% for flashMessage in app.session.flashbag.get('ok') %}
    <div class="blogger-notice">
    {{ flashMessage }}
    </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('exception') %}
    <div class="exception-notice">
    {{ flashMessage }}
    </div>
    {% endfor %}  


    {% block form %}
    <form action="{{ path('_bookAdd') }}" method="post" {{ form_enctype(form) }} class="blogger">
    {% endblock %}    
        {{ form_errors(form) }}

        {{ form_row(form.issn) }}
        {{ form_row(form.titul) }}
        {{ form_row(form.cena) }}
        {{ form_row(form.denVydani) }}
        {{ form_row(form.nakladatelstvi) }}
        {{ form_row(form.vydavatel) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}